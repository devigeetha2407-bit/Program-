#include <stdio.h>

int main(void) {
    float weight, height;
    float bmi;

    // Input weight and height
    printf("Enter weight in kilograms: ");
    scanf("%f", &weight);

    printf("Enter height in meters: ");
    scanf("%f", &height);

    // Calculate BMI
    bmi = weight / (height * height);

    // Display BMI
    printf("\nBody Mass Index (BMI) = %.2f\n", bmi);

    return 0;
}
